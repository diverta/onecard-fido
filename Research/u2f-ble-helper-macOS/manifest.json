{
  "manifest_version": 2,
  "name": "FIDO U2F BLE Helper for macOS",
  "short_name": "U2F BLE Helper",
  "description": "Helper App that plugs into the u2f-chrome-extension to providing FIDO U2F over Bluetooth Smart",
  "version": "0.0.1",
  "minimum_chrome_version": "38",

  "icons": {
    "16": "assets/icon_16.png",
    "128": "assets/icon_128.png"
  },
  "permissions": [
    "nativeMessaging"
  ],
  "background": {
    "persistent": false,
    "scripts": [
      "main.js",
      "b64.js",
      "core-min.js",
      "enc-base64-min.js",
      "enc-utf16-min.js",
      "sha256.js",
      "u2f.js",
      "background.js"
    ]
  }
}
